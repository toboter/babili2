<div class="col-lg-6 nested-fields">
  <div class="card shadow-sm rounded p-2 text-small">
    <%= f.hidden_field :creator_id, value: current_user.id if f.object.new_record? %>
    <%= f.input :type, collection: Vocabulary::Relationship::TYPES, include_blank: false %>
    <%= f.input :foreign_concept, collection: Vocabulary::Concept.all - [@concept], label_method: :name, value_method: :to_global_id, selected: f.object.foreign_concept %>
    <%= link_to_remove_association icon('fas', 'remove', 'remove'), f %>
  </div>
</div>